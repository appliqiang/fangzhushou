.h-topic{
     height: 140rpx;
    background-color: #fff;
    border-bottom: solid 1rpx #eee;
}

.addition-title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    height: 60rpx;
    width: 100%;
    padding: 30rpx;
    font-size: 32rpx;
    color: #4a4f70;
    background-color: #fff;
    margin-top: 40rpx;
    letter-spacing: 1rpx;
    border-bottom: 1rpx solid #eee;
}

input {
    width: 100%;
    height: 50rpx;
}

.addition-content {
    height: 200rpx;
    padding: 30rpx;
    font-size: 32rpx;
    color: #4a4f70;
    background-color: #fff;
    margin-top: 40rpx;
    letter-spacing: 1rpx;
    border:1rpx solid #ccc;
}

textarea {
    width: 95%;
    height: 200rpx;
    letter-spacing: 1rpx;
}

.choose-topic {
    border-top:1rpx solid #ccc;
    border-bottom:1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 140rpx;
    background-color: #fff;
    border-bottom: solid 1rpx #eee;
}

.topic-name {
    background-color: #999;
    padding: 10rpx 40rpx;
    font-size: 32rpx;
    color: #fff;
    border-radius: 10rpx;
    margin-left: auto;
}

.choose-title {
    display: flex;
    font-size: 32rpx;
    color: #4a4f70;
    margin: 0 0 0 40rpx;
}

.right {
    width: 46rpx;
    height: 46rpx;
    margin: 0 20rpx 0 20rpx;
}

.submit {
    margin: 60rpx auto;
    width: 40%;
    height: 80rpx;
    color: #fff;
    border-radius: 20rpx;
    transition-duration: 0.3s;
}

.on-submit {
    background-color: #4d51d2;
}







.q-image-wrap{
  width: 250rpx;
  height: 250rpx;
  border: 3px solid #f0f0f0;
  /* float: left; */
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image{
  width: 250rpx;
  height: 250rpx;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #2e82ff;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover image{
  position: absolute;
  right:58rpx;
  top:50rpx;
}
 
.uploadImgBtn{
  width: 220rpx;
  height: 220rpx;
  text-align: center;
  line-height: 220rpx;
  border: 6rpx solid #f0f0f0;
  /* float:left; */
}
.uploadImgBtn icon{
  font-size: 120rpx;
  color: #999;
}